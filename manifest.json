{
  "manifest_version": 2,
  "name": "TimeGuard",
  "version": "1.0",
  "description": "Blocks certain websites with configurable timers",
  "background": {
    "scripts": [ "background.js" ]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "http://*/",
    "https://*/",
    "storage"
  ]
}
